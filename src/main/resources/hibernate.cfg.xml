<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/search</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">andy</property>
        <property name="connection.password">password</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property>


        <mapping class="com.huoteng.entity.GetUrl"/>
        <mapping resource="com/huoteng/entity/GetUrl.hbm.xml"/>
        <mapping class="com.huoteng.entity.TargetUrl"/>
        <mapping resource="com/huoteng/entity/TargetUrl.hbm.xml"/>
        <mapping class="com.huoteng.entity.Users"/>
        <mapping resource="com/huoteng/entity/Users.hbm.xml"/>

        <!-- DB schema will be updated if needed -->
    </session-factory>
</hibernate-configuration>